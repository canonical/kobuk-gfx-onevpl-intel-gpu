#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


override_dh_auto_configure:
	dh_auto_configure -- \
		-DBUILD_RUNTIME=ON \
		-DMFX_ENABLE_ENCTOOLS=ON \
		-DMFX_ENABLE_AENC=ON \
		-DBUILD_TESTS=ON \
		-DBUILD_TOOLS=ON

%:
	dh $@ --builddir build/
